{
  "name": "cap-argos",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "cross-env NODE_ENV=development && concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev\" \"electron .\"",
    "build": "build:python && next build && electron-builder",
    "build:electron": "next build && electron-builder",
    "start": "next start",
    "lint": "next lint",
    "build:python": "node scripts/build-python.js",
    "build:python:win": "cross-env PLATFORM=win32 node scripts/build-python.js",
    "build:python:mac": "cross-env PLATFORM=darwin node scripts/build-python.js",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "canvas": "^3.0.1",
    "concurrently": "^9.1.2",
    "electron-serve": "^2.1.1",
    "konva": "^9.3.18",
    "next": "14.2.23",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.4.0",
    "react-konva": "^18",
    "sass": "^1.83.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cross-env": "^7.0.3",
    "electron": "^31",
    "electron-builder": "^25.1.8",
    "eslint": "^8",
    "eslint-config-next": "14.2.23",
    "typescript": "^5"
  },
  "build": {
    "asar": true,
    "extraResources": [
      {
        "from": "sqlite.db",
        "to": "sqlite.db"
      }
    ],
    "files": [
      "out/**/*",
      "dist/**/*",
      "main.js",
      "preload.js",
      "src/lib/database.js",
      "electronServe.js",
      "public/**/*",
      "package.json",
      "!**/node_modules/**",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}"
    ]
  },
  "bundleDependencies": [
    "@types/node",
    "typescript",
    "sqlite3"
  ],
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
